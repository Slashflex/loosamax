{
  "name": "loosamax",
  "version": "1.0.0",
  "description": "Simple poker game (WIP)",
  "main": "app.js",
  "scripts": {
    "watch:sass": "node-sass public/sass/main.scss public/css/styles.css -w",
    "compile:sass": "node-sass public/sass/main.scss public/css/styles.comp.css",
    "prefix:css": "postcss --use autoprefixer -b 'last 10 versions' public/css/styles.comp.css -o public/css/styles.prefix.css",
    "compress:css": "node-sass public/css/styles.prefix.css public/css/styles.css --output-style compressed",
    "build:css": "npm-run-all compile:sass prefix:css compress:css",
    "start": "node server.js",
    "dev": "nodemon server.js",
    "watch:js": "parcel watch ./public/js/index.js --out-dir ./public/js --out-file bundle.js",
    "build:js": "parcel build ./public/js/index.js --out-dir ./public/js --out-file bundle.js"
  },
  "author": "Slashflex",
  "license": "ISC",
  "dependencies": {
    "@babel/polyfill": "^7.10.1",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-mongo-sanitize": "^2.0.0",
    "express-rate-limit": "^5.1.3",
    "helmet": "^3.23.1",
    "hpp": "^0.2.3",
    "html-to-text": "^5.1.1",
    "mongoose": "^5.9.19",
    "morgan": "^1.10.0",
    "nodemailer": "^6.4.8",
    "pug": "^3.0.0",
    "xss-clean": "^0.1.1"
  },
  "devDependencies": {
    "autoprefixer": "^9.8.0",
    "node-sass": "^4.14.1",
    "npm-run-all": "^4.1.5",
    "parcel-bundler": "^1.12.4",
    "postcss-cli": "^7.1.1",
    "prettier": "^2.0.5"
  }
}
